@model IEnumerable<GameVerse.Web.ViewModels.Game.UserPagesViewModels.UserBoughtGamesViewModel>

@{
    ViewData["Title"] = "Games you bought";
    // var today = DateTime.Now.ToString("dd-MM-yyyy");
}

<link rel="stylesheet" href="~/css/userdBoughtGames.css">
<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
</div>
<hr />

<link rel="stylesheet" type="text/css" href="//netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css">
<div class="container bootstrap snippets bootdey">
    <div class="row">
        <div class="col-lg-12">
            <div class="main-box no-header clearfix">
                <div class="main-box-body clearfix">
                    <div class="table-responsive">
                        <table class="table user-list">
                            <thead>
                            <tr>
                                <th><span>Game</span></th>
                                <th><span>Bought On</span></th>
                                <th class="text-center"><span>Quantity</span></th>
                                <th><span>Price</span></th>
                                <th>&nbsp;</th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr>
                                @if (!@Model.Any())
                                {
                                    <td>
                                        <h3>No games bought</h3>
                                    </td>
                                }
                            </tr>
                                @foreach (var gameBought in Model)
                                {
                                    <tr>
                                        <td>
                                            <img src="@gameBought.Image" alt="Game Image">
                                            <a asp-area="" asp-controller="GameStore" asp-action="Details" asp-route-id="@gameBought.GameId" class="user-link">@gameBought.Title</a>
                                            <span class="user-subhead">GameType: @gameBought.Type</span>
                                        </td>
                                        <td>@gameBought.BoughtOn</td>
                                        <td class="text-center">
                                            @gameBought.Quantity
                                        </td>
                                        <td class="text-center">
                                            @gameBought.Price
                                        </td>
                                        <td style="width: 20%;">
                                            <a asp-area="" asp-controller="GameStore" asp-action="Details" asp-route-id="@gameBought.GameId" class="btn btn-primary">Details</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


