@model GameVerse.Web.ViewModels.Game.Review.ReviewInputViewModel
@{
    ViewData["Title"] = "Edit Review";
    // var today = DateTime.Now.ToString("dd-MM-yyyy");
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
</div>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-area="" asp-action="Edit" asp-route-gameId="@Model.GameId" method="post" enctype="multipart/form-data">
            <div class="mb-2">
                <label asp-for="@Model.Content" class="form-label-add-edit">Content</label>
                <textarea asp-for="@Model.Content" class="form-control" aria-required="true" rows="2">@Model.Content</textarea>
                <span asp-validation-for="@Model.Content" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <label asp-for="@Model.Rating" class="form-label-add-edit">Rating</label>
                <input asp-for="@Model.Rating" class="form-control" aria-required="true" type="number" step="1" min="0" value="@Model.Rating"/>
                <span asp-validation-for="@Model.Rating" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <label asp-for="@Model.CreatedOn" class="form-label-add-edit">Created On</label>
                <input asp-for="@Model.CreatedOn" class="form-control" aria-required="true" value="@Model.CreatedOn" type="datetime" />
                <span asp-validation-for="@Model.CreatedOn" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <input class="btn btn-primary btn-light-text w-100 py-2 fw-bold rounded" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>