@model GameVerse.Web.ViewModels.Game.Details.GameDetailsViewModel

<h2 class="text-start mt-5 mb-3">Game Details</h2>
<hr />
<div class="mb-4"></div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css" integrity="sha256-mmgLkCYLUQbXn0B1SRqzHar6dCnv9oZFPEC1g1cwlkk=" crossorigin="anonymous" />
<div class="container">
    <div class="row">
        <div class="col-md-5">
            <div class="project-info-box mt-0">
                <h2>@Model.Title</h2>
                <p class="mb-0">@Model.Description</p>
            </div>

            <div class="project-info-box">
                <p><b>Publishing Studio:</b> @Model.PublishingStudio</p>
                <p><b>Year Published:</b> @Model.YearPublished</p>
                <p><b>Publisher:</b> @Model.Publisher</p>
                <p><b>Created On:</b> @Model.CreatedOn</p>
                <p><b>Type:</b> @Model.Type</p>
                <p><b>Quantity In Stock:</b> @Model.QuantityInStock</p>
                <p class="mb-0"><b>Price:</b> @Model.Price</p>
            </div>

            <div class="project-info-box mt-0 mb-0">
                <button type="button" class="btn btn-light btn-lg m-2 w-auto" asp-area="" asp-controller="GameStore" asp-action="Index">Back</button>
                
                @* For logged user *@
                @if (User?.Identity?.IsAuthenticated == true && !User.IsInRole("Moderator") && !User.IsInRole("Admin"))
                {
                    <button type="button" class="btn btn-success btn-lg w-50" asp-area="" asp-controller="" asp-action="">Buy</button>
                }

                @*For Admin or Moderator who is creator of the Event*@
                @if ((User.IsInRole("Moderator") && User?.Identity?.Name == Model.Publisher) || User.IsInRole("Admin"))
                {
                    <a type="button" class="btn btn-warning btn-lg w-25" asp-area="" asp-controller="GameStore" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                    <a type="button" class="btn btn-danger btn-lg w-25" asp-area="" asp-controller="GameStore" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
                }
            </div>
        </div>

        <div class="col-md-7">
            <img src="@Model.Image" alt="game-image" class="rounded game-details-img">
            <div class="project-info-box">
                <p><b>Genres:</b> @String.Join(", ", Model.Genres)</p>
                <p><b>Platforms:</b> @String.Join(", ", Model.Platforms)</p>
                <p><b>Restrictions:</b> @String.Join(", ", Model.Restrictions)</p>
            </div>
            <a href="https://www.systemrequirementslab.com/cyri" type="button" class="btn btn-primary">Can You Run It</a>
        </div>
    </div>
</div>

