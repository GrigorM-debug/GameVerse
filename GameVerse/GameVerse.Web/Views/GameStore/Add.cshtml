@model GameVerse.Web.ViewModels.Game.Add.GameInputViewModel

@{
    ViewData["Title"] = "Add Game";
    // var today = DateTime.Now.ToString("dd-MM-yyyy");
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
</div>
<hr />


<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="Add" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-sm-6 mb-2">
                    <label asp-for="@Model.Title" class="form-label-add-edit">Title</label>
                    <input asp-for="@Model.Title" class="form-control" aria-required="true"/>
                    <span asp-validation-for="@Model.Title" class="text-danger"></span>
                </div>
                <div class="col-sm-6 mb-2">
                    <label asp-for="@Model.Price" class="form-label-add-edit">Price</label>
                    <div class="input-group">
                        <span class="input-group-text">€</span>
                        <input asp-for="@Model.Price" class="form-control" aria-required="true" type="number" step="0.01" min="0.00" />
                    </div>
                    <span asp-validation-for="@Model.Price" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-2">
                <label asp-for="@Model.PublishingStudio" class="form-label-add-edit">Publishing Studio</label>
                <input asp-for="@Model.PublishingStudio" class="form-control" aria-required="true" rows="2" />
                <span asp-validation-for="@Model.PublishingStudio" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <label asp-for="@Model.YearPublished" class="form-label-add-edit">Year Published</label>
                <input asp-for="@Model.YearPublished" class="form-control" aria-required="true" rows="2" type="text"/>
                <span asp-validation-for="@Model.YearPublished" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <label asp-for="@Model.Description" class="form-label-add-edit">Description</label>
                <textarea asp-for="@Model.Description" class="form-control" aria-required="true" rows="2"></textarea>
                <span asp-validation-for="@Model.Description" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <label asp-for="@Model.QuantityInStock" class="form-label-add-edit">Quantity In Stock</label>
                <input asp-for="@Model.QuantityInStock" class="form-control" aria-required="true" type="number" step="1" min="0" />
                <span asp-validation-for="@Model.QuantityInStock" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <label asp-for="@Model.Image" class="form-label-add-edit">Image</label>
                <div class="d-flex">
                    <svg xmlns="http://www.w3.org/2000/svg"
                         fill="none"
                         viewBox="0 0 24 24"
                         stroke-width="1.5"
                         stroke="currentColor"
                         class="size-6"
                         width="10%"
                         height="10%">
                        <path stroke-linecap="round" stroke-linejoin="round" d="m2.25 15.75 5.159-5.159a2.25 2.25 0 0 1 3.182 0l5.159 5.159m-1.5-1.5 1.409-1.409a2.25 2.25 0 0 1 3.182 0l2.909 2.909m-18 3.75h16.5a1.5 1.5 0 0 0 1.5-1.5V6a1.5 1.5 0 0 0-1.5-1.5H3.75A1.5 1.5 0 0 0 2.25 6v12a1.5 1.5 0 0 0 1.5 1.5Zm10.5-11.25h.008v.008h-.008V8.25Zm.375 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Z" />
                    </svg>
                    <input asp-for="@Model.Image" type="text" class="form-control" aria-required="false" />
                    <span asp-validation-for="@Model.Image" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-6 mb-2">
                    <label asp-for="@Model.CreatedOn" class="form-label-add-edit">Created On</label>
                    <input asp-for ="@Model.CreatedOn" class="form-control" aria-required="true" value="@Model.CreatedOn" type="datetime" />
                    <span asp-validation-for="@Model.CreatedOn" class="text-danger"></span>
                </div>
                <div class="col-sm-6 mb-2">
                    <label asp-for="@Model.Type" class="form-label-add-edit">Select Type</label>
                    <select asp-for="@Model.Type" class="form-control" aria-required="true"
                            asp-items="@(new SelectList(Model.GameTypes, "Value", "Text"))">
                    </select>
                    <span asp-validation-for="@Model.Type" class="text-danger"></span>
                </div>
            </div>
            
            <div class="mb-2">
                <label asp-for="@Model.SelectedGenres" class="form-label-add-edit">Select Genres - For multiple hold Ctrl</label>
                <select asp-for="@Model.SelectedGenres" class="form-control" aria-required="true"
                        asp-items="@(new SelectList(Model.GenreSelectList, "Id", "Name"))"
                        multiple="multiple">
                </select>
                <span asp-validation-for="@Model.SelectedGenres" class="text-danger"></span>
            </div>
            
            <div class="mb-2">
                <label asp-for="@Model.SelectedPlatforms" class="form-label-add-edit">Select Platforms - For multiple hold Ctrl</label>
                <select asp-for="@Model.SelectedPlatforms" class="form-control" aria-required="true"
                        asp-items="@(new SelectList(Model.PlatformSelectList, "Id", "Name"))"
                        multiple="multiple">
                </select>
                <span asp-validation-for="@Model.SelectedPlatforms" class="text-danger"></span>
            </div>
            
            <div class="mb-2">
                <label asp-for="@Model.SelectedRestrictions" class="form-label-add-edit">Select Restrictions - For multiple hold Ctrl</label>
                <select asp-for="@Model.SelectedRestrictions" class="form-control" aria-required="true"
                        asp-items="@(new SelectList(Model.RestrictionSelectList, "Id", "Name"))"
                        multiple="multiple"
                        >
                </select>
                <span asp-validation-for="@Model.SelectedRestrictions" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <input class="btn btn-primary btn-dark-white w-100 py-2 fw-bold rounded" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>
