@model GameVerse.Web.Areas.Administrator.Models.AdminIndexViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">

<div class="container mt-3">
    <h1 class="mb-4 text-center">Welcome To Admin Dashboard</h1>

    @* Statics *@
    <h2>Statics</h2>
    <hr/>
    <div class="row">
        <div class="col-md-3">
            <div class="card text-white bg-primary mb-3">
                <div class="card-header">Total Users</div>
                <div class="card-body">
                    <h3 class="card-title">@Model.TotalUsers</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success mb-3">
                <div class="card-header">Total Moderators</div>
                <div class="card-body">
                    <h3 class="card-title">@Model.TotalModerators</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-danger mb-3">
                <div class="card-header">Total Administrators</div>
                <div class="card-body">
                    <h3 class="card-title">@Model.TotalAdministrators</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-info mb-3">
                <div class="card-header">Total Events</div>
                <div class="card-body">
                    <h3 class="card-title">@Model.TotalEvents</h3>
                </div>
            </div>
        </div>
        
        <div class="row justify-content-center">
            <div class="col-md-3">
                <div class="card text-white bg-primary mb-3">
                    <div class="card-header">Total Games</div>
                    <div class="card-body">
                        <h3 class="card-title">@Model.TotalGames</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-white bg-danger mb-3">
                    <div class="card-header">Total Events Registrations</div>
                    <div class="card-body">
                        <h3 class="card-title">@Model.TotalEventRegistrations</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-white bg-success mb-3">
                    <div class="card-header">Total Bought Games</div>
                    <div class="card-body">
                        <h3 class="card-title">@Model.TotalBoughtGames</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @*Actions*@
    <h2 class="mt-4">Actions</h2>
    <hr/>
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">Manage Users</h5>
                    <p class="card-text">View, Promote, or Demote users.</p>
                    <a asp-area="Administrator" asp-controller="UserManagement" asp-action="ManageUsers" class="btn btn-primary">Go to Users</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">Manage Events</h5>
                    <p class="card-text">View, Update, or Delete events.</p>
                    <a asp-area="" asp-controller="Event" asp-action="Index" class="btn btn-primary">Go to Events</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">Manage Games</h5>
                    <p class="card-text">View, Update or Delete games.</p>
                    <a asp-area="" asp-controller="GameStore" asp-action="Index" class="btn btn-primary">Go to Games</a>
                </div>
            </div>
        </div>
    </div>

    @*Recent site Activities*@
    <h2 class="mt-3">Recent Activities In Log Files</h2>
    <hr/>
    <div class="row">
        <div class="col-md-12">
            <table class="table table-bordered table-hover">
                <thead class="thead-dark">
                <tr>
                    <th scope="col">File Name</th>
                    <th scope="col">Actions</th>
                </tr>
                </thead>
                <tbody>
                @if (!Model.RecentLogs.Any())
                {
                    <h3>No Log files</h3>
                }
                @foreach (var log in Model.RecentLogs)
                {
                    <tr>
                        <td>@log</td>
                        <td>
                            <a asp-area="Administrator"
                               asp-controller="Admin"
                               asp-action="DownloadLog"
                               asp-route-fileName="@log"
                               class="btn btn-primary font-weight-bold">
                                <i class="fas fa-download"></i> Download Log File
                            </a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>